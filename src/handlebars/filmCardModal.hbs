{{#with movieInfo}}
<img src="{{poster_path}}" alt="{{title}}" class="movie__poster">
<h3 movie__title>{{title}}</h3>
<table>
    <tr>
        <td>Vote / Votes</td>
        <td><span>{{vote_average}}</span> / {{vote_count}}</td>
    </tr>
    <tr>
        <td>Popularity</td>
        <td>{{popularity}}</td>
    </tr>
    <tr>
        <td>Original Title</td>
        <td>{{original_title}}</td>
    </tr>
    <tr>
        <td>Genre</td>
        <td>{{genres_id}}</td>
    </tr>
</table>
<h4>About</h4>
<p>{{overview}}</p>
<div>
    <button type="button">Add to watched</button>
    <button type="button">Add to queue</button>
</div>
{{/with}}