{{#with movieInfo}}
<img src="{{posterPath}}" alt="{{title}}" class="movie__poster">
<div class="movie-info">
    <h3 class="movie__title">{{title}}</h3>
    <table>
        <tr>
            <td class="row-title">Vote / Votes</td>
            <td><span>{{voteAverage}}</span> / {{voteCount}}</td>
        </tr>
        <tr>
            <td class="row-title">Popularity</td>
            <td>{{popularity}}</td>
        </tr>
        <tr>
            <td class="row-title">Original Title</td>
            <td class="original-title">{{originalTitle}}</td>
        </tr>
        <tr>
            <td class="row-title">Genre</td>
            <td>{{genres}}</td>
        </tr>
    </table>
    <h4>About</h4>
    <p class="overview">{{overview}}</p>
    <div class="button-wrapper">
        <button type="button" class="btn-add-to-watched">Add to watched</button>
        <button type="button" class="btn-add-to-queue">Add to queue</button>
    </div>
</div>

{{/with}}